<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Danh sách người dùng</title>
    <script src="/static/js/vendor/modernizr-2.8.3-respond-1.4.2.min.js"></script>
    <link rel="stylesheet" href="/static/css/bootstrap.min.css" />
    <script src="/static/js/vendor/jquery-library.js"></script>
    <script src="/static/js/vendor/version2bootstrap.min.js"></script>
    <!-- DataTables CSS -->
    <link
      href="/static/testDataTable/vendor/datatables-plugins/dataTables.bootstrap.css"
      rel="stylesheet"
    />

    <!-- DataTables Responsive CSS -->
    <link
      href="/static/testDataTable/vendor/datatables-responsive/dataTables.responsive.css"
      rel="stylesheet"
    />

    <!-- Custom CSS -->
    <link
      href="/static/testDataTable/dist/css/sb-admin-2.css"
      rel="stylesheet"
    />

    <!-- Custom Fonts -->
    <link
      href="/static/testDataTable/vendor/font-awesome/css/font-awesome.min.css"
      rel="stylesheet"
      type="text/css"
    />
  </head>

  <body>
    <div>
      <%- include ../../components/navbar%>
      <section class="container-fluid" style="margin-top: 4vw">
        <div>
          <div id="user">
            <div>
              <div>
                <a
                  href="/admin/user/new"
                  class="btn btn-success"
                  style="margin-bottom: 1vw"
                  >Thêm người dùng</a
                >
              </div>

              <!-- tab user trong layout -->
              <!-- <div class="col-lg-12"> -->
              <div class="panel panel-default">
                <div class="panel-heading">Bảng chi tiết người dùng</div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                  <div class="table-responsive">
                    <table
                      width="100%"
                      class="table table-striped table-bordered table-hover"
                      id="user_table"
                    >
                      <thead>
                        <tr>
                          <th>Mã TK</th>
                          <th>Họ tên</th>
                          <th>Địa chỉ</th>
                          <th>Số điện thoại</th>
                          <th>Ngày sinh</th>
                          <th>Giới tính</th>
                          <th>Email</th>
                          <th>Hành động</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% if(data && data.users) {%> <%for(var i=0; i <
                        data.users.length; i++){%>
                        <tr title="Nhấn để xem chi tiết">
                          <td><%= data.users[i].ma_tai_khoan%></td>
                          <td><%= data.users[i].ho_ten%></td>
                          <td><%= data.users[i].dia_chi%></td>
                          <td><%= data.users[i].sdt%></td>
                          <td><%= data.users[i].ngay_sinh%></td>
                          <td><%= data.users[i].gioi_tinh%></td>
                          <td><%= data.users[i].email%></td>
                          <td>
                            <a
                              name="buttonEdit"
                              id="buttonEdit"
                              role="button"
                              class="btn btn-primary"
                              href="/admin/user/edit/<%= data.users[i].ma_tai_khoan%>"
                              >Edit</a
                            >
                            <button name="buttonDelete" id="buttonDelete"
                            title="Xoá người dùng" class="btn btn-danger
                            user_delete"
                            ma_tai_khoan=<%=data.users[i].ma_tai_khoan%> >Delete
                          </td>
                        </tr>
                        <%}%> <%}%>
                      </tbody>
                    </table>
                  </div>
                  <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
              </div>

              <!-- /.panel -->
              <!-- </div> -->
            </div>
          </div>
        </div>
      </section>
    </div>
    <script src="/static/testDataTable/vendor/jquery/jquery.min.js"></script>
    <!-- DataTables JavaScript -->
    <script src="/static/testDataTable/vendor/datatables/js/jquery.dataTables.min.js"></script>
    <script src="/static/testDataTable/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
    <script src="/static/testDataTable/vendor/datatables-responsive/dataTables.responsive.js"></script>

    <script>
      $(document).ready(function() {
        $("#user_table").DataTable({
          responsive: true
        });
      });
    </script>
    <script src="/static/js/user.js"></script>
  </body>
</html>
